<h1>Birds of the Day! Get 'em while they hot!</h1>

<div>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% @products.each do |product| %>
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="<%= " active" if product == @products.first %>"></li>
        <% end %>
      </ol>

        <div class="carousel-inner">
          <% @products.each do |product| %>
            <div class="carousel-item<%= " active" if product == @products.first %>">
              <div class="row">
                <div class="col-lg-6">
                  <%= image_tag(product.image_url) %>
                  <div class="carousel-caption d-none d-md-block">
                    <%= product.name %>
                  </div>
                </div>
                <div class=" col-lg-6">
                  <div class="product_body">
                    <div class="product_info">
                      <h1><%= product.name %></h1>
                      <h5>Description: <%= product.description %></h5>
                      <h5>Color: <%= product.color %></h5>
                      <h5><%= number_to_currency(product.price/100.to_f) %></h5>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">

          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">

          <span class="sr-only">Next</span>
        </a>
  </div>
</div>
