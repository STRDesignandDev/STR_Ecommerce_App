<h1>Contact Us</h1>

<%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
  <div class="form-group form-row">
    <div class="form-control col-sm-6">
      <div class="form-style">
        <%= form.label :name %>
        <%= form.text_field :name, placeholder: "Enter Name" %>
      </div>
    </div>
    <div class="form-control col-sm-6">
      <div class="form-style">
        <%= form.label :email %>
        <%= form.text_field :email, placeholder: "Enter Email" %>
      </div>
    </div>
    <div class="form-control col-sm-12">
      <div class="form-style">
        <%= form.label :message %>
        <%= form.text_area :message, placeholder: "Enter Message", rows: 5 %>
      </div>
    </div>
  </div>
<%= form.submit "Send", class: "form_label" %>
<% end %>

<div class="expert_bird">
  <div class="bird_chat">
    <%= link_to image_tag("bird_chat.svg") %>
  </div>
  <div class="expert_bird">
    <%= image_tag ("expert_bird.gif") %>
  </div>
</div>
