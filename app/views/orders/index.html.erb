<div class="row">
  <div class="col-md-6" style="padding-right:10%;">
    <h1>Bird Box</h1>
    <% @orders.each do |order| %>

    <div style="width:90%;">

      <div id="order-body" class="row product-reviews">

        <div class="col-4">
          <%= link_to image_tag(order.product.image_url, class: "img-fluid") %>
        </div>

        <div class="col-4">
          <h4 style="padding-left:5px;text-align:left">
            <%=order.product.name%>
          </h4>
        </div>

        <div class="col-4">
          <div  class="row">
            <div class="col-8">
              <strong><h5>Price:</h5><%= number_to_currency(order.product.price/100.to_f) %></strong>
            </div>
            <div class="col-4">
              <div class="remove_order_item"><%= link_to image_tag("remove_bird.svg"), order, method: :delete, data: { confirm: 'Are you sure?' } %></div>
            </div>
          </div>


        </div>

  </div>



      </div>
    <% end %>

  </div>

  <div class="col-md-6">

    <div>

      <div  class="order_summary">
        <div class="box_only">
          <%= image_tag ("box_only.svg") %>
        </div>
        <h5 style="font-size:1.8em">Birds in Box: <p style="display:inline;font-size:1em"><%=order_total%></p></h5>
        <h5 style="font-size:1.8em">Grand Total: <p style="display:inline;font-size:1em">$<%= Order.where("user_id = ?", current_user.id).sum("total")/100.to_f  %></p></h5>
      </div>
    </div>

    <div style="padding-top:15px;">
      <h1>Shipping Information</h1>
      <div style="padding-top:15px">
        <div class="form-group form-row">

            <div class="form-control col-sm-6">
              <div class="form-style">
                <label for="fname"> First Name</label>
                <input type="text" id="fname" name="firstname" placeholder="Mr. Bird">
              </div>
            </div>

            <div class="form-control col-sm-6">
              <div class="form-style">
                <label for="fname"> Last Name</label>
                <input type="text" id="lname" name="lastname" placeholder="Lover">
              </div>
            </div>

            <div class="form-control col-sm-12">
              <div class="form-style">
                <label for="fname"> Street Address</label>
                <input type="text" id="address" name="address" placeholder="123 Street Apt 2">
              </div>
            </div>

            <div class="form-control col-sm-4">
              <div class="form-style">
                <label for="fname"> City</label>
                <input type="text" id="city" name="city" placeholder="Bird City">
              </div>
            </div>

            <div class="form-control col-sm-4">
              <div class="form-style">
                <label for="fname"> State</label>
                <input type="text" id="state" name="state" placeholder="Bird State">
              </div>
            </div>

            <div class="form-control col-sm-4">
              <div class="form-style">
                <label for="fname"> Zip Code</label>
                <input type="text" id="zip" name="zip" placeholder="12345">
              </div>
            </div>

        </div>
      </div>
    </div>



    <div style="padding-top:15px;">
      <h1>Billing Information</h1>
      <p class="tiny-disclaimer">(birds are not actually real)</p>

      <div style="padding-top:15px">
        <div class="form-group form-row">

          <div class="form-control col-sm-12">
            <div class="form-style">
              <label for="fname"> CC/Debit Number</label>
              <input type="text" id="fname" name="firstname" placeholder="Seriously?">
            </div>
          </div>

          <div class="form-control col-sm-6">
            <div class="form-style">
              <label for="fname">Expiration</label>
              <input type="text" id="fname" name="firstname" placeholder="Don't!">
            </div>
          </div>

          <div class="form-control col-sm-6">
            <div class="form-style">
              <label for="fname"> CV2</label>
              <input type="text" id="fname" name="firstname" placeholder="Do it!">
            </div>
          </div>

        </div>
      </div>
    </div>
    <div class="checkout">
      <%= image_tag ("checkout.svg") %>
    </div>


  </div>
</div>
