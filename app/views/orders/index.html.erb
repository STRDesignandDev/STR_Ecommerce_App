<h2>Orders</h2>
<div class="row">
  <% @orders.each do |order| %>
    <div class="col-sm-6 col-md-4" id="order-body">
      <%= image_tag(order.product.image_url, class: "img-fluid") %>
      <h5>
        Order # <%= order.id %>:
        <%= link_to order.product.name, order %>
      </h5>
      <p><%= order.product.description %></p>
      <strong><%= number_to_currency(order.product.price/100.to_f) %></strong>
      <div>
        <%= link_to 'Keep Shopping |', products_path %>
        <%= link_to 'Remove', order, method: :delete, data: { confirm: 'Are you sure?' } %><!-- /col -->
      </div>
    </div>
  <% end %>
</div>
