<div class="col-md-4 col-sm-6 nopadding">
  <div class="product_body">
    <div class="product_image"><%= link_to image_tag(product.image_url, class: "img-fluid"), product unless product.image_url.nil? %></div>
    <div class="product_info">
      <a><h2><%= product.name %></h2></a>
      <p>Description: <%= product.description %></p>
      <p>Color: <%= product.color %></p>
      <p><%= number_to_currency(product.price/100.to_f) %></p>  
      <div class="editing_options">
        <p><%= link_to 'Edit', edit_product_path(product) %> | <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %> | <%= link_to 'Add To Cart', orders_path, method: :create, data: { confirm: 'Are you sure?' } %></p>
      </div>
    </div>
  </div>
</div>
