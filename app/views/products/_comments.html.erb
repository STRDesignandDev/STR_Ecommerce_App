<div>
  <% if @product.comments.empty? %>
    <h5>Sorry, no reviews for this bird yet.  Be the first to tell us what you think!</h5>
  <% else %>
    <h2>Customer Reviews</h2>
    <% @comments.each do |comment| %>
        <div class="row product-reviews">
            <hr>
            <p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
            <div class="rating rated rating_inner" data-score="<%= comment.rating %>"></div>
            <div class="comment_text">
              <p>"<%= comment.body %>"</p>
            </div>
        </div>
      <% end %>
  <% end %>
    <div class="page_bar">
      <%= will_paginate @comments %>
    </div>
</div>
